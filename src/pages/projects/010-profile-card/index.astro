---
import Base from "../../../layouts/Base.astro"
import './_styles.scss'
---

<Base title="Profile Card">
  <img class="bg-circle bg-circle--top" aria-hidden="true" src="/fm-projects/img/010-bg-pattern-top.svg" />
  <img class="bg-circle bg-circle--bottom" aria-hidden="true" src="/fm-projects/img/010-bg-pattern-bottom.svg" />
  <div class="card">
    <img src="/fm-projects/img/010-image-victor.jpg" alt="Victor Profile Image" class="card__img">
    <p class="card__person person">
      <span class="person__name">Victor Crest</span>
      <span class="person__age">26</span>
      <span class="person__place">London</span>
    </p>
    <div class="card__footer">
      <div class="numbers">
        <span class="numbers__number">80K</span>
        <span class="numbers__name">Followers</span>
      </div>
      <div class="numbers">
        <span class="numbers__number">803K</span>
        <span class="numbers__name">Likes</span>
      </div>
      <div class="numbers">
        <span class="numbers__number">1.4K</span>
        <span class="numbers__name">Photos</span>
      </div>
    </div>
  </div>
</Base>