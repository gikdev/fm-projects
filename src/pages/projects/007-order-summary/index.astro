---
import './_styles.scss'
import Base from '../../../layouts/Base.astro';
---
<Base title="Order summary card">
  <div class="card">
    <img 
      src="/fm-projects/img/illustration-hero.svg" 
      alt="An illustration of a lady listening to music" 
      class="card__image" 
    />
    <div class="card__content">
      <h1 class="card__heading">Order Summary</h1>
      <p class="card__description">You can now listen to millions of songs, audiobooks, and podcasts on any device anywhere you like!</p>
      <div class="plan">
        <img src="/fm-projects/img/icon-music.svg" alt="Music Note Icon" class="plan__icon">
        <p class="plan__title">Annual Plan</p>
        <p class="plan__price">$59.99/year</p>
        <a class="plan__link" href="#">Change</a>
      </div>
      <button class="btn btn--primary">Proceed to Payment</button>
      <button class="btn btn--ghost">Cancel Order</button>
    </div>
  </div>
</Base>